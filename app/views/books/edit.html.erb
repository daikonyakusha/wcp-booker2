<p class="notice"><%= flash.notice %></p>
<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Editing Book</h2>
      <% if @book.errors.any? %>
       <div class="error px-5">
        <h4><%=@book.errors.count %>error prohibited this obj from being saved:</h4>
         <ul>
          <% @book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
           <% end %>
         </ul>
       </div>
      <% end %>
    <%= form_with model:@book, local:true do |f| %>
     <p>Title</p>
     <%= f.text_field :title,class:"form-control title" %>
     <p>Option</p>
     <%= f.text_area :body,class:"form-control introduction" %><br>
     <%= f.submit "Update Book",class:'btn btn-success' %>
    <% end %>
     <p class="mt-3">
     <%= link_to"Show",book_path(@book) %>
     |
     <%= link_to"Back",books_path %>
     </p>
  </div>
 </div>
</div>
